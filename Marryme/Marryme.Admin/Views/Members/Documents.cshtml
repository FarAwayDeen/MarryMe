
@{
    ViewBag.Title = "Documents";
}
<script src="~/Angular/Members/Documents.js"></script>
<div class="container-fluid">
    <div class="col-sm-12 col-md-12" ng-controller="DocumentsController">
        <div class="row">
            <div class=" col-sm-12">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="card">
                            <div class="card-header row">
                                <h5>Uploaded Documents</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="DocumentTable" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Member Name</th>
                                                <th>Document Type</th>
                                                <th>File</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="docs in Docs">
                                                <td>{{docs.Name}}</td>
                                                <td>{{docs.DocName}}</td>
                                                <td>
                                                    <a href="{{docs.FilePath}}" download>
                                                        <img src="{{docs.FilePath}}" alt="{{docs.DocName}}" style="width:200px" />
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

