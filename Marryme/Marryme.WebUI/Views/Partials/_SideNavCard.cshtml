    <a id="toggle-function" class="container-fluid" ng-click="isShowRightContent = !isShowRightContent;isShowSideBarMobile = false;"><span class="fa fa-list mr-3"></span>Profile</a>

    <div id="right-content-mobile" class="container-fluid" ng-show="isShowRightContent && !isShowSideBarMobile">
        <a href="@Url.Action("ProfileWizard","Member")" routerLinkActive="active"><span class="fa fa-user mr-3"></span>My Profile</a>
        <a href="@Url.Action("WifeDetail","Member")"><span class="fa fa-info-circle mr-3"></span>Existing Wife Detail</a>
        <a href="@Url.Action("UploadDocs","Member")"><span class="fa fa-file mr-3"></span>Upload Documents</a>
