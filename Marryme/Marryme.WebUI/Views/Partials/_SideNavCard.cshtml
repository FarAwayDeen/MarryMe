        <a href="@Url.Action("DivorcePolicy","Member")"><span class="fa fa-legal mr-3"></span>Divorce Policy</a>

    </div>
    <a href="@Url.Action("MyMatches","Member")" routerLinkActive="active"><span class="fa-solid fa-users mr-3"></span>My Matches</a>
    @*<a href="@Url.Action("MemberList","Member")"><span class="fa fa-list mr-3"></span>Member List</a>*@
    @if ((Session["Gender"]).ToString() == "Male")
    {
        <a href="@Url.Action("ProfileRequirement","Member")"><span class="fa fa-clipboard mr-3"></span>My Preferred Wife </a>
    }
    else
    {
        <a href="@Url.Action("ProfileRequirement","Member")"><span class="fa fa-clipboard mr-3"></span>My Preferred Husband </a>
    }
    @* Acceptance Criterai changed to Family Involvement *@
    <a href="@Url.Action("AcceptanceCriteria","Member")"><span class="fa fa-check-double mr-3"></span>Family Involvement</a>
