    @*<a href="@Url.Action("DocumentList","Member")"><span class="fa fa-file mr-3"></span>Upload Documents List</a>*@
    <a href="@Url.Action("ChangePassword","Member")"><span class="fa fa-lock mr-3"></span>Change Password</a>
    <a href="@Url.Action("Logout","Account")"><span class="fa fa-sign-out mr-3"></span>Sign out</a>
</div>

<script>
    $(document).ready(function () {
        var path = window.location.href; // because the 'href' property of the DOM element is the absolute path
        $('.sidenav a').each(function () {
            if (this.href === path) {
                $(this).addClass('active');
            }
        });
    });
</script>