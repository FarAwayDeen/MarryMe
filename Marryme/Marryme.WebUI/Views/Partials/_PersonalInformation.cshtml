                    <div class="row">
                        <label class="col-md-3">Physical Status </label>
                        <div class="col-md-8 form-group">
                            <ul class="radio-list">
                                <li ng-repeat="PhysicalStatus in PhysicalStatusList">
                                    <label ng-class="{'radio-active':$parent.PersonalInfo.PhysicalStatus==PhysicalStatus.ID}">
                                        {{PhysicalStatus.Name}}
                                        <input type="radio" ng-model="$parent.PersonalInfo.PhysicalStatus" value="{{PhysicalStatus.ID}}" />
