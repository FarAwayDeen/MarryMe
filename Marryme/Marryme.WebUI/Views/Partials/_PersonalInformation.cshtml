                            <input type="text" class="form-control" name="onlynumbers" title="please enter number only" maxlength="2" ng-model="PersonalInfo.NoOfChildren">
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-2">Cast </label>
                                <div class="input-group col-md-10">
                                    <div class="input-group-prepend">
                                        <button class="btn btn-outline-secondary" type="button"
                                                title="Add Your Cast in the List">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    <select class="col-md-8 form-control" ng-model="MemberList.Subcast">
