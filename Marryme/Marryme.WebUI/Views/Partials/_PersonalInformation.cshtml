                        <div class="col-md-3">
                            <select name="cars" id="hieght" class="form-control" ng-model="PersonalInfo.HeightUnit">
                                <option value="cm">Centimeters</option>
                                <option value="feet">Feet</option>
                            </select>
                            @*<input type="button"
                    class="meters"
                    value="Enter height in feet and inches" />*@
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="row">
                                <div class="metersInputGroup col-md-12 col-sm-6  form-group" ng-if="PersonalInfo.HeightUnit=='cm'" style="display:flex">
                                    <div class="col-md-3">
                                        <label for="meters" class="pr-3">Centimeters:</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input id="meters" type="number" name="meters" step="1" min="0" class="form-control"
                                               ng-model="PersonalInfo.Centimeters" required />
                                    </div>
                                </div>
                                <div class="feetInputGroup col-md-12 form-group" ng-if="PersonalInfo.HeightUnit=='feet'" style="display:flex">
                                    <label for="feet" class="pr-3">feet:</label>
                                    <input id="feet" type="number" name="feet" min="0" step="1" max="8" class="col-md-3 form-control"
                                           ng-model="PersonalInfo.Feet" />
