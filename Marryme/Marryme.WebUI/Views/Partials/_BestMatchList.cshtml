                                                </div>

                                            </div>
                                            <div class="text-left">
                                                <a href="#" class="text-info"> View Detail</a>
                                            </div>
                                            <!--<div class="p-2" style="border-top: 1px solid lightgray;">
                                                &nbsp;-->
                                            @*<p class="float-right text-secondary" style="padding-top: 13px; font-weight: 550; font-size: medium;"><i class="far fa-user">&nbsp;</i>50 <i class="far fa-heart">&nbsp;</i>65</p>*@
                                            <!--</div>-->
                                        </div>
                                    </div>
                                </div>
