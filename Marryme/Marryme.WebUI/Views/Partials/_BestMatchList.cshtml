                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
    </div>
</div>


<script>
    $(window).ready(function () {
        $('.btn-focus').addClass("btn-outline-primary").removeClass("active");
        $('#buttonbasic').addClass("btn-primary").removeClass("btn-outline-primary");
    });
    $('.btn-focus').click(function () {
        $('.btn-focus').removeClass("btn-primary").addClass("btn-outline-primary").removeClass("active");
        $(this).removeClass("btn-outline-primary");
        $(this).addClass("btn-primary");
    });
    function loginMessage() {
        InfoMessage("Please login to view detail");
    }
</script>