        $('#childTable tr').each(function () { var customerId = $(this).find(".customerIDCell").html(); });
    </script>*@
<script>
    $(document).ready(() => {
        $(function () {
            $("input[name='WifeKids']").on('keyup', function (e) {
                /*if (e.keyCode == 8) alert('backspace trapped');*/
                $(this).val($(this).val().replace(/[^0-9]/g, ''));

                if (parseInt($(this).val()) >= 12) {
                    //console.log($(this).val())
                    $(this).val('');
                    $("#KidsCard").hide();
                }
                else if ($(this).val == null || $(this).val == '') {
                    $("#KidsCard").hide();
                    // console.log($(this).val())
                }
            });
            $('table').on('click', "input", function () {
                console.log("sd")
                // $(this).fadeOut(500);
            });

            function numberonly(e) {
                $('.numbersonly').on('keyup', function (e) {
                    /*if (e.keyCode == 8) alert('backspace trapped');*/
                    $(this).val($(this).val().replace(/[^0-9]/g, ''));

                });
            }
        });

</script>