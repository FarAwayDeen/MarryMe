        if ($('input[type="text"]').val() == '') {
            $('#btnPolicy').prop('disabled', true);
            console.log('disable called');
        } else {
            $('#btnPolicy').prop('disabled', false);
            console.log('enable called');
        }
    });

    $("input[type=checkbox]").on("click", function () {
        var id = $(this).attr("id");
        var inputid = id + 'input';
        //console.log(inputid);
        //console.log('value of: ' + $('#' + id).val());
        if ($('#' + id).val() == 'true') {
