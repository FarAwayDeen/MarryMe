
@{
    ViewBag.Title = "Document List";
}
<link href="~/assets/vendor/sweetalert2/sweetalert2.css" rel="stylesheet" />
<script src="~/assets/vendor/sweetalert2/sweetalert2.js"></script>
<script src="~/Angular/Member/DocumentList.js"></script>
<div class="container-fluid">
    <div class="col-sm-12 col-md-12" ng-controller="DocumentListController">
        <div class="row">
            <div class="col-sm-3 col-sm-3C">
                @Html.Partial("~/Views/Partials/_SideNavCard.cshtml")
            </div>
            <div class=" col-sm-9">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="card">
                            <div class="card-header row">
                                <div class="col-sm-6">
                                    <h5>Uploaded Documents</h5>
                                </div>
                                <div class="col-sm-6 text-right">
                                    <a href="@Url.Action("UploadDocs","Member")" type="button" class="btn btn-success "><span class="fa fa-upload mr-3"></span> Document List</a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="DocumentTable" class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Document Type</th>
                                                <th>File</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="docs in Docs">
                                                <td>{{docs.DocName}}</td>
                                                <td>
                                                    <a href="{{docs.FilePath}}" download>
                                                        <img src="{{docs.FilePath}}" alt="{{docs.DocName}}" style="width:200px" />
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="" type="button" id="{{docs.DocTypeID}}" class="btn btn-danger" ng-click="Deletetoastr(docs.DocTypeID)">Delete Image</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
