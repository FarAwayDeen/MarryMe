
@{
    ViewBag.Title = "Login";
}

<div class="container">
    @if (ViewBag.EmailConfimation == true)
    {
        <div class="alert alert-success" style="position: relative; z-index: 1;" role="alert">
            success: Your account has been confirmed and activated.
        </div>
    }
    @if (ViewBag.EmailConfimation == false)
    {
        <div class="alert alert-danger" style="position: relative; z-index: 1;" role="alert">
            Error: Please Check your Email for Confirmation.
        </div>
    }
</div>
<div class="col-md-4 col-sm-4 offset-4 align-items-center justify-content-center" data-aos="zoom-in" data-aos-delay="200">
    <div class="card">
        <div class="card-header bg-success">
            <h5 class="modal-title text-white">Login</h5>
        </div>
        <div class="card-body">
            @Html.Partial("~/Views/Partials/_Login.cshtml")
        </div>
        @*<div class="card-footer bg-success">

        </div>*@
    </div>
    @*<br />
        <br />
